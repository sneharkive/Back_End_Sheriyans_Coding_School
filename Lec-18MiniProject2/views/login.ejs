    <div class="flex justify-between">
      <h1 class="text-3xl  border-b-4 border-white">Log In</h1>
      <a class="text-3xl hover:bg-blue-500 bg-green-600 px-4 py-2 rounded-2xl font-bold" href="/">Create a Account</a>
    </div>


    <form action="/login" method="post"> 
      <input class="block w-80 mb-8 px-5 py-3 bg-transparent rounded-lg border-2 border-zinc-800" type="email" name="email" placeholder="Email Id">

      <input class="block w-80 mb-8 px-5 py-3 bg-transparent rounded-lg border-2 border-zinc-800" type="password" name="password" placeholder="Password">

      <input class="px-5 py-2 bg-blue-500 rounded-lg text-xl cursor-pointer" type="submit" value="Log In">
    </form>
  </div>
</body>
</html>